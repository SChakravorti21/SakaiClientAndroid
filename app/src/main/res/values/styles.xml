<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="CourseIcon" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">25dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:fontFamily">@font/course_icons</item>
    </style>


    <style name="FontawesomeText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/fontawesome</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="FontawesomeText.Term" parent="FontawesomeText">
        <item name="android:textColor">@color/sakai_medium_silver</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="FontawesomeText.Course" parent="FontawesomeText">
        <item name="android:textColor">@color/sakai_light_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

</resources>

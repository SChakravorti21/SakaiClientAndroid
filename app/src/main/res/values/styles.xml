<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorLink">@color/linkColor</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="preferenceTheme">@style/PreferencesTheme</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">@color/navigationTitleColor</item>
    </style>

    <style name="CourseIcons" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:fontFamily">@font/course_icons</item>
    </style>


    <style name="FontawesomeText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/fontawesome</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="FontawesomeText.Term" parent="FontawesomeText">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="FontawesomeText.Course" parent="FontawesomeText">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="FontawesomeText.Resource" parent="FontawesomeText">
        <item name="android:textColor">@color/sakai_light_silver</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/linkColor</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/secondaryTextColor</item>
        <!-- Used for the background -->
        <item name="android:background">@color/tertiaryBackgroundColor</item>
    </style>

    <style name="PreferencesTheme" parent="@style/PreferenceThemeOverlay">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <!-- Color for summaries (eg. version text) -->
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <!-- White color for category headings -->
        <item name="colorAccent">@color/primaryTextColor</item>
    </style>

    <style name="autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="cutoff">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

</resources>
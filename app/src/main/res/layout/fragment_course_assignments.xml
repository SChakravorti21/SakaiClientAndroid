<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.development.sakaiclientandroid.fragments.assignments.CourseAssignmentsFragment">

    <!-- View pager for swiping through the assignments -->
    <!-- It has a transparent background to support the raised
        feel of the CardView-->
    <android.support.v4.view.ViewPager
        android:id="@+id/assignment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    </android.support.v4.view.ViewPager>

</FrameLayout>

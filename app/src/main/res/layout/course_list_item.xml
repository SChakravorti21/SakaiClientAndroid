<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lblListItemImage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp" />


    <TextView
        android:id="@+id/lblListItemText"
        android:layout_width="271dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textIsSelectable="false"
        android:textSize="20dip"
        app:layout_constraintEnd_toStartOf="@+id/arrow_image"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toEndOf="@+id/lblListItemImage"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/arrow_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:paddingTop="8dp"
        android:src="@drawable/ic_keyboard_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblListItemText"
        app:layout_constraintTop_toTopOf="parent" />




</android.support.constraint.ConstraintLayout>